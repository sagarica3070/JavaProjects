server:
  port: 8082

spring:
  application:
    name: apigateway
  cloud:
    gateway:
      routes:
        - id: inventory-service
          uri: lb://inventory-service
          predicates:
            - Path=/api/inventory/**
        - id: order-service
          uri: lb://order-service
          predicates:
            - Path=/api/order/**
        - id: product-service
          uri: lb://product-service
          predicates:
            - Path=/api/product/**

#eureka:
#  client:
#    service-url:
#      defaultZone: http://localhost:8762/eureka/
#    register-with-eureka: true
#    fetch-registry: true

eureka:
  client:
    fetch-registry: true
    register-with-eureka: true
    service-url:
      defaultZone:  http://localhost:8762/eureka/
  instance:
    hostname: localhost
    prefer-ip-address: true
