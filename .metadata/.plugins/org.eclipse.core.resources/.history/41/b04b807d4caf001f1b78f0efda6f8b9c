spring.application.name=product-service


#spring.application.name=product-service

# Database Configuration
spring.datasource.url=jdbc:mysql://localhost:3306/product_service_db  # Replace 'product_service_db' with your database name
spring.datasource.username=root                                      # Replace with your database username
spring.datasource.password=password                                  # Replace with your database password
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver         # JDBC driver for MySQL

# Hibernate (JPA) Configuration
spring.jpa.database-platform=org.hibernate.dialect.MySQLDialect      # Hibernate dialect for MySQL
spring.jpa.show-sql=true                                             # Show generated SQL statements
spring.jpa.hibernate.ddl-auto=update                                # Schema generation: options are validate, update, create, create-drop
